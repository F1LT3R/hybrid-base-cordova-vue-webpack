<?xml version='1.0' encoding='utf-8'?>
<widget id="com.f1lt3r.hybridbase" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hybrid-Base</name>
    <description>
        Hybrid mobile app development platform. Cordova, Vue.js, Webpack, Jest, Nightwatch.
    </description>
    <author email="al@pwn.io" href="https://f1lt3r.io">
        F1LT3R
    </author>
    <content src="dist/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
